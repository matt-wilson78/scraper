<div class="row">
    <h3 class="card">{{article.title}}</h3>
    <h5 class="card">{{body}}</h5>
</div>

<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card col s8">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="noteName" placeholder="name">
        </div>
        <div class="form-group">
            <label for="comment">Note</label>
            <input type="text" class="form-control" id="noteComment" placeholder="note">
        </div>
        <button type="submit" class="btn btn-primary mb-2" id="commentSubmit">Submit</button>

    </form>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Notes</h5>
        {{#if article.note}}
        {{#each article.note}}
        <div class="card">
            <p id="noteName">{{name}}</p>
            <p>{{body}}</p>
        </div>
        {{/each}}
        {{else}}
        <p>No notes exist</p>
        {{/if}}
    </div>

</div>